{
  "manifest_version": 3,
  "name": "Lichess External Engine",
  "version": "2.0",
  "description": "Chess analysis with external engine support for Lichess",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://lichess.org/*",
    "*://www.lichess.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://lichess.org/*", "*://www.lichess.org/*"],
      "js": ["injector.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lj.js", "chess.js", "stockfish.js"],
      "matches": ["*://lichess.org/*", "*://www.lichess.org/*"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
